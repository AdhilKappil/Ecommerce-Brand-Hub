<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Order Invoice</title>

    <style>
        /* Global styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Header styles */
        h2 {
            text-align: center;
            margin-top: 20px;
        }

        /* Content container styles */
        .container {
            margin-top: 50px;
            margin-bottom: 50px;
        }

        /* Card styles */
        .card {
            border: 1px solid #ccc;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Invoice styles */
        .invoice {
            color: black;
            padding: 20px;
        }

        /* User info styles */
        .user-info {
            margin-top: 20px;
        }

        /* Order details styles */
        .order-details {
            margin-top: 20px;
            border-top: 1px solid #ccc;
            border-bottom: 1px solid #ccc;
            padding: 20px;
        }

        /* Product details styles */
        .product-details {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-collapse: collapse;
            width: 100%;
        }

        .product-details table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .product-details th,
        .product-details td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .product-details img {
            max-width: 100px;
            max-height: 100px;
            object-fit: cover;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        /* Totals styles */
        .totals {
            margin-top: 20px;
        }

        /* Closing message styles */
        .closing-message {
            margin-top: 20px;
        }

        .billing-details {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            /* Align to the right */
        }

        .billing-details h3 {
            text-align: right;
            /* Align the heading text to the right */
        }

        .billing-details table {
            text-align: right;
            /* Align table content to the right */
        }

        .billing-details td {
            padding: 5px;
            /* Adjust padding as needed */
        }
    </style>

</head>

<body>

    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 p-3" id="invoice"> <!-- Adjusted column width to col-md-10 -->
                <div class="card">
                    <div class="invoice">
                        <h2>Your Order Confirmed!</h2>
                        <div class="user-info">
                            <span>Hello, <%= userData.firstName %>
                                    <%= userData.lastName %></span>
                            <span>Your order has been confirmed and will be shipped in the next two days!</span>
                        </div>

                        <!-- Order details -->
                        <div class="order-details">
                            <h3>Order Details</h3>
                            <table>
                                <tr>
                                    <td>Order Date:</td>
                                    <td>
                                        <%= orderData.orderDate.toLocaleDateString('en-US', { year: 'numeric' ,
                                            month: 'short' , day: '2-digit' }).replace(/\//g, '-' ) %>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Order Id:</td>
                                    <td>
                                        <%= orderData. trackId %>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Expected Delivery:</td>
                                    <% const orderDate=new Date(orderData.orderDate); const expectedDeliveryDate=new
                                        Date(orderDate); expectedDeliveryDate.setDate(orderDate.getDate() + 7); const
                                        formattedDeliveryDate=expectedDeliveryDate.toLocaleDateString('en-US', {
                                        year: 'numeric' , month: 'short' , day: '2-digit' }).replace(/\//g, '-' ); %>
                                        <td>
                                            <%= formattedDeliveryDate %>
                                        </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Product details -->
                        <div class="product-details">
                            <h3>Product Details</h3>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Payment Method</th>
                                        <th>Payment Status</th>
                                        <th>Order Status</th>
                                        <th>Total Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (orderData && orderData.products.length> 0) { %>
                                        <% orderData.products.forEach(item=> { %>
                                            <tr>
                                                <td>
                                                    <span>
                                                        <%= item.productId.productName %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="text-left">
                                                        <span>
                                                            <%= item.price %>
                                                        </span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="text-left">
                                                        <span>
                                                            <%= item.quantity %>
                                                        </span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="text-left">
                                                        <span>
                                                            <%= orderData.paymentMethod %>
                                                        </span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="text-left">
                                                        <span>
                                                            <%= item.paymentStatus %>
                                                        </span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="text-left">
                                                        <span>
                                                            <%= item. OrderStatus %>
                                                        </span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="text-left">
                                                        <span>
                                                            <%= (item.quantity * item.price).toFixed(0) %>
                                                        </span>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="6">
                                                            <p>No products available.</p>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Shipping Address -->
                        <div class="row d-flex mt-4">
                            <!-- Shipping Address -->
                            <div class="col-md-6">
                                <h3>Shipping Address</h3>
                                <table>
                                    <tr>
                                        <td>
                                            <%= orderData.shippingAddress.fullName %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Mobile Number: <%= orderData.shippingAddress.mobile %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Location : <%= orderData.shippingAddress.city %>,<%=
                                                    orderData.shippingAddress.district %>,<%=
                                                        orderData.shippingAddress.state %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>PIN: <%= orderData.shippingAddress.pincode %>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Billing Details -->
                            <div class="col-md-6 billing-details">
                                <h3>Billing Details</h3>
                                <table>
                                    <tr>
                                        <td>Subtotal:</td>
                                        <td>₹ <%= orderData.totalAmount.toFixed(2) %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Shipping Fee</td>
                                        <td>₹ 0.00</td>
                                    </tr>
                                    <tr class="border-top border-bottom">
                                        <td class="font-weight-bold">Total:</td>
                                        <td class="font-weight-bold">₹ <%= orderData.totalAmount.toFixed(2) %>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>


                        <!-- Closing message -->
                        <div class="closing-message d-flex justify-content-between align-items-center mt-4">
                            <p class="font-weight-bold mb-0">Thanks for shopping with us!</p>
                            <h3 class="mb-0">Brand Hub</h3>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

</body>

</html>